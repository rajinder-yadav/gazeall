{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [                                  /* Specify library files to be included in the compilation. */
      "es2018",
      "es2017",
      "dom",
      "es5",
      "es6",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "removeComments": true,
    "outDir": "./bin"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "bin/**/*",
    "build/**/*",
    "dist/**/*",
    "docs/**/*",
    "log/*",
    "node_modules/**/*",
    "test/**/*"
  ]
}
