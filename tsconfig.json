{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "removeComments": true,
    "outDir": "./bin"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "bin/**/*",
    "build/**/*",
    "dist/**/*",
    "docs/**/*",
    "log/*",
    "node_modules/**/*",
    "test/**/*"
  ]
}
